<core:FragmentDefinition xmlns:layout="sap.ui.layout"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
    <VBox id="consent-form-container" fitContainer="true" width="100%" class="consent-form-container">

        <layout:VerticalLayout id="consent-form_fst_name" class="vertical-layout">
            <Label id="consent-form-fst-name-label" labelFor="consent-form-fst-name" text="FirstName"></Label>
            <Input id="consent-form-fst-name" class="inputBox" liveChange="onLiveChange" type="Text" required="true" placeholder="Filled out by user" value="{oConsentModel>/ConsentDetail/ConsentFirstName}"/>
        </layout:VerticalLayout>

        <layout:VerticalLayout id="consent-form_lst_name" class="vertical-layout">
            <Label id="consent-form-lst-name-label" labelFor="consent-form-lst-name" text="LastName"></Label>
            <Input id="consent-form-lst-name" class="inputBox" liveChange="onLiveChange" type="Text" required="true" placeholder="Filled out by user"  value="{oConsentModel>/ConsentDetail/ConsentLastName}"/>
        </layout:VerticalLayout>
        
        <layout:VerticalLayout id="consent-form_title" class="vertical-layout">
            <Label id="consent-form-title-label" labelFor="consent-form-title" text="Site Contact Title"></Label>
            <Input id="consent-form-title" class="inputBox" liveChange="onLiveChange" type="Text" required="true" placeholder="Filled out by user" value="{oConsentModel>/ConsentDetail/ConsentContactTitle}"/>
        </layout:VerticalLayout>
        
        <layout:VerticalLayout id="consent-form_address" class="vertical-layout">
            <Label id="consent-form-address-label" labelFor="consent-form-address" text="Site Address"></Label>
            <Input id="consent-form-address" class="inputBox" liveChange="onLiveChange" type="Text" required="true" placeholder="Filled out by user" value="{oConsentModel>/ConsentDetail/ConsentAddress}"/>
            <Text class="address-helper-text" text="123 Main st." ></Text>
        </layout:VerticalLayout>
        
        <layout:VerticalLayout id="consent-form_city" class="vertical-layout">
            <Label id="consent-form-city-label" labelFor="consent-form-city"  text="City"></Label>
            <Input id="consent-form-city" class="inputBox" liveChange="onLiveChange" type="Text" required="true" placeholder="Filled out by user" value="{oConsentModel>/ConsentDetail/ConsentCity}"/>
        </layout:VerticalLayout>
        
        <layout:VerticalLayout class="vertical-layout">
            <Label id="consent-form-state-label" labelFor="consent-form-state-list" text="State"></Label>
            <ComboBox id="consent-form-state-list" required="true" items="{ostateValuesModel>/}" change="onLiveChange" width="100%" placeholder="Make a Selection" selectedKey="{oConsentModel>/ConsentDetail/ConsentState}">
                <core:Item text="{ostateValuesModel>text}" key="{ostateValuesModel>text}"></core:Item>
            </ComboBox>
        </layout:VerticalLayout>

        <layout:VerticalLayout class="vertical-layout">
            <Label id="consent-form-zipcode-label" labelFor="consent-form-zipcode" text="zipcode"></Label>
            <Input id="consent-form-zipcode" class="inputBox" liveChange="onLiveChange" type="Number" required="true" placeholder="Filled out by user" value="{oConsentModel>/ConsentDetail/ConsentZipcode}"/>
        </layout:VerticalLayout>  

         <layout:VerticalLayout id="consent-form_accno" class="vertical-layout">
            <Label id="consent-form-accno-label" labelFor="consent-form-accno" text="Account Number"></Label>
            <Input id="consent-form-accno" class="inputBox" liveChange="onLiveChange" type="Text" required="true" placeholder="Filled out by user" value="{oConsentModel>/ConsentDetail/ConsentAccountNumber}"></Input>
        </layout:VerticalLayout>      
    
        <layout:VerticalLayout id="consent-form_ph" class="vertical-layout">
            <Label id="consent-form-ph-label" labelFor="consent-form-ph" text="Phone Number"></Label>
            <Input id="consent-form-ph" class="inputBox" liveChange="onLiveChange" type="Number" required="true" placeholder="Filled out by user" value="{oConsentModel>/ConsentDetail/ConsentPhoneNumber}"></Input>
        </layout:VerticalLayout>

        <layout:VerticalLayout id="consent-form_email" class="vertical-layout">
            <Label id="consent-form-email-label" labelFor="consent-form-email" text="Email Address"></Label>
            <Input id="consent-form-email" class="inputBox" liveChange="onLiveChange" type="Email" required="true" placeholder="Filled out by user" value="{oConsentModel>/ConsentDetail/ConsentEmailAddr}"></Input>
        </layout:VerticalLayout>
    </VBox>
</core:FragmentDefinition>

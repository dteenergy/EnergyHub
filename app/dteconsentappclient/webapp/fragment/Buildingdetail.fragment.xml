<core:FragmentDefinition xmlns:layout="sap.ui.layout"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>	
	<VBox fitContainer="true"  width="100%" class="building-container" >
		
		<layout:VerticalLayout width="100%">
			<Label text="Building Name" required="true"></Label>
			<Input class="inputBox" value="{locationModel>buildingName}" placeholder="Filled out by user">
			</Input>
		</layout:VerticalLayout>

		<layout:VerticalLayout width="100%">
			<Label text="Account Number" required="true"></Label>
			<Input class="inputBox" value="{locationModel>accountNumber}" placeholder="Filled out by user"></Input>
		</layout:VerticalLayout>

		<layout:VerticalLayout width="100%">
			<Label text="Location Address" required="true"></Label>
			<Input class="inputBox" liveChange="onbuildingLocationAddressChange" showSuggestion="true" suggestionItemSelected=".onsuggestionItemSelected" suggestionItems="{dqmAddressModel>/dqmAddress}" placeholder="Filled out by user">
				<suggestionItems>
					<core:Item text="{dqmAddressModel>serviceAddress/houseNumber},{dqmAddressModel>serviceAddress/streetName},{dqmAddressModel>serviceAddress/secondaryCodes},{dqmAddressModel>serviceAddress/secondaryNumber},{dqmAddressModel>serviceAddress/city},{dqmAddressModel>serviceAddress/state},{dqmAddressModel>serviceAddress/zipCode}"/>
				</suggestionItems>
			</Input>
		</layout:VerticalLayout>

		<layout:VerticalLayout width="100%">
			<Label text="City" required="true"></Label>
			<Input class="inputBox" value="{locationModel>city}" placeholder="Filled out by user"></Input>
		</layout:VerticalLayout>


		<layout:VerticalLayout width="100%">
			<Label text="State" required="true"></Label>
			<ComboBox required="true" change="handleStateChange" selectedKey="{locationModel>state}" width="100%">
				<core:Item text="Michigan" key="{locationModel>state}"></core:Item>
			</ComboBox>
		</layout:VerticalLayout>
		
		<layout:VerticalLayout width="100%">
			<Label text="zipcode" required="true"></Label>
			<Input class="inputBox" value="{locationModel>zipcode}" placeholder="Filled out by user"/>
		</layout:VerticalLayout>

		<Button text="- Remove" press="onRemoveTrigger"></Button>
	
	</VBox>
</core:FragmentDefinition>